
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@model MyWebMVC.Data.KhachHang




<div class="container-fluid py-5">
            <div class="container py-5">
                <h1 class="mb-4">Thông tin khách hàng</h1>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="form-item">
                                <label  class="form-label my-3"> Họ tên</label><sup>*</sup>
                                <input asp-for="@Model.HoTen" type="text" class="form-control">
                                <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                            </div>
                            <div class="form-item d-none">

                                <input asp-for="@Model.MaKh" type="text" class="form-control">
                                <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                            </div>

                            <div class="form-item">
                                <label  class="form-label my-3">Giới tính</label><sup>*</sup><br />
                                <input asp-for="@Model.GioiTinh" type="checkbox" class="form-check-input">Nam     
                            </div>

                            <div class="form-item">
                                <label class="form-label my-3"></label>Ngày sinh<sup>*</sup>
                                <input asp-for="@Model.NgaySinh" type="date" class="form-control">
                                <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                            </div>
                            <div class="form-item">
                                <label  class="form-label my-3"></label>Địa chỉ<sup>*</sup>
                                <input asp-for="@Model.DiaChi" type="text" class="form-control">
                                <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"></label>Số điện thoại<sup>*</sup>
                                <input asp-for="@Model.DienThoai"  class="form-control">
                                <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3"></label>Email<sup>*</sup>
                                <input asp-for="@Model.Email" type="email" class="form-control">
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                            <div class="form-item">
                                <label asp-for="@Model.Hinh" class="form-label my-3"></label>Hình ảnh<sup>*</sup><br />
                        @* <img style="width:150px; height:150px" src="~/Hinh/KhachHang/@Model.Hinh"></img> *@
                                <input asp-for="@Model.Hinh" type="file" class="form-control">
                                <span asp-validation-for="@Model.Hinh" class="text-danger"></span>
                            </div>
                            <hr>
                            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Thay đổi</button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>






<a class="btn btn-success" asp-action="DangXuat">Đăng xuất</a>