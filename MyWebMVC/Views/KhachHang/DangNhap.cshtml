@model MyWebMVC.ViewModels.LoginVM
@{
	ViewData["Title"] = "Đăng nhập";

}

<div class="container-fluid py-5">
			<div class="container py-5">
				<h1 class="mb-4" style="display: flex; justify-content: center">Đăng Nhập</h1>
				<form asp-action="DangNhap" asp-route-returnUrl="@ViewBag.returnUrl">
					<div  class="text-danger" asp-validation-summary="All"></div>
					<div>
						<div class="col-md-6 container ">
							<div>
								<div class="col-lg-12">
									<div class="form-item w-100">
										<label asp-for="@Model.UserName" class="form-label my-3"></label><sup>*</sup>
										<input asp-for="@Model.UserName" class="form-control">
										<span asp-validation-for="@Model.UserName" class="text-danger"></span>
									</div>
								</div>
								<div class="col-lg-12">
									<div class="form-item w-100">
										<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
										<input asp-for="@Model.Password" type="password" class="form-control">
										<span asp-validation-for="@Model.Password" class="text-danger"></span>
									</div>
								</div>
							</div>

							<hr>
							<div class="row g-4 text-center align-items-center justify-content-center pt-4">
								<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Nhập</button>
								<div style="display:flex; justify-content:between">
									<a class=" icon-link-hover btn border-danger col-lg-6 col-md-12" asp-controller="KhachHang" asp-action="QuenMatKhau"> Quên mật khẩu?</a>
									<a class=" icon-link-hover btn border-danger col-lg-6 col-md-12" asp-controller="KhachHang" asp-action="DangKy"> Đăng ký</a>
								</div>
							</div>


						</div>

					</div>
				</form>
			</div>
		</div>

