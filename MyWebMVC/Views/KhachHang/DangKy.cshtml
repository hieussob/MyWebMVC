@model MyWebMVC.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutCustomAll.cshtml";
}

<div class="container-fluid py-5">
            <div class="container py-5">
                <h1 class="mb-4">Đăng ký</h1>
                <form asp-action="DangKy" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="row">
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item w-100">
                                        <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                                        <input asp-for="@Model.MaKh" class="form-control">
                                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item w-100">
                                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                                        <input asp-for="@Model.MatKhau" type="password" class="form-control">
                                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-item">
                                <label asp-for="@Model.HoTen" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.HoTen" type="text" class="form-control">
                                <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                            </div>

                            <div class="form-item">
                                <label asp-for="@Model.GioiTinh" class="form-label my-3"></label><sup>*</sup><br />
                                <span>
                                <input asp-for="@Model.GioiTinh" type="checkbox" class="form-check-input">Nam
                                <input style="margin-left:30px" asp-for="@Model.GioiTinh" type="checkbox" class="form-check-input">Nữ
                                </span>
                            </div>
                            
                            <div class="form-item">
                                <label asp-for="@Model.NgaySinh" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.NgaySinh" type="date" class="form-control">
                                <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                            </div>
                            <div class="form-item">
                                <label asp-for="@Model.DiaChi" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.DiaChi" type="text" class="form-control">
                                <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                            </div>
                            <div class="form-item">
                                <label asp-for="@Model.DienThoai" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.DienThoai"  class="form-control">
                                <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                            </div>
                            <div class="form-item">
                                <label asp-for="@Model.Email" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Email" type="email" class="form-control">
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                            <div class="form-item">
                                <label asp-for="@Model.Hinh" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Hinh" type="file" class="form-control">
                                <span asp-validation-for="@Model.Hinh" class="text-danger"></span>
                            </div>
                            <hr>
                            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">ĐĂNG KÝ</button>
                            </div>
                            
                            
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>

